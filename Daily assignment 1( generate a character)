#include<stdio.h>
#include<stdlib.h> // haeder file :-> for rand()

char aayush  (int num)  // creating function,🧐🧐
{
    if( 0<= num  && num<=9)
    {
        return  '0' + num;   
    }

    else if( num <=15)
    {
        return 'A' + (num -10 ); 
    }

    else{
        printf("Not a valid number");
    }
}

    


int main()
{

    
    //int num = rand() %  15  ; // 0 to 15

    int num;
num = rand() % 15;
     printf("%d\n",num);

    char temp = aayush  (num);

    printf("%c" ,temp);


    return 0;
}
